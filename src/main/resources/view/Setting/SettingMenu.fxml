<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="700.0"
      prefWidth="500.0"
      stylesheets="@../ProfileMenu/style.css"
      xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.SettingMenu.SettingMenu">
   <children>
      <VBox alignment="CENTER" prefHeight="700.0" prefWidth="500.0" spacing="10.0"
            stylesheets="@../ProfileMenu/style.css">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" maxWidth="-Infinity" prefHeight="60.0" prefWidth="450.0" spacing="15.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Difficulty level:" textAlignment="CENTER"
                              wrappingWidth="112.25079345703125">
                           <font>
                              <Font size="15.0"/>
                           </font>
                        </Text>
                        <Slider blockIncrement="1.0" majorTickUnit="1.0" max="3.0" min="1.0" minorTickCount="0"
                                prefHeight="38.0" prefWidth="300.0" snapToTicks="true" fx:id="levelBar"/>
                        <Text fx:id="levelName" strokeType="OUTSIDE" strokeWidth="0.0" text="LEVEL"
                              textAlignment="CENTER" wrappingWidth="61.050782918930054">
                           <font>
                              <Font size="15.0"/>
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" maxWidth="-Infinity" prefHeight="60.0" prefWidth="450.0" spacing="15.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Number of balls:" textAlignment="CENTER"
                              wrappingWidth="112.25079345703125">
                           <font>
                              <Font size="15.0"/>
                           </font>
                        </Text>
                        <Slider blockIncrement="1.0" majorTickUnit="1.0" min="20.0" minorTickCount="0" prefHeight="38.0"
                                prefWidth="300.0" snapToTicks="true" fx:id="ballsBar"/>
                        <Text fx:id="numberOfBallsName" strokeType="OUTSIDE" strokeWidth="0.0" text="000"
                              textAlignment="CENTER" wrappingWidth="61.050782918930054">
                           <font>
                              <Font size="15.0"/>
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#chooseMap" prefHeight="31.0"
                          prefWidth="200.0" styleClass="ChangeAvatar" text="Choose Map">
                     <font>
                        <Font size="15.0"/>
                     </font>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" prefHeight="31.0"
                          prefWidth="200.0" styleClass="ChangeName" text="Mute" fx:id="muteButton">
                     <font>
                        <Font size="15.0"/>
                     </font>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" prefHeight="31.0"
                          prefWidth="200.0" styleClass="ChangePass" text="Set to BW Mode" fx:id="bwButton">
                     <font>
                        <Font size="15.0"/>
                     </font>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false"  prefHeight="31.0"
                          prefWidth="200.0" styleClass="ChangeAvatar" text="Language" fx:id="languageButton">
                     <font>
                        <Font size="15.0"/>
                     </font>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#changeControlKeys"
                          prefHeight="31.0" prefWidth="200.0" styleClass="ChangeName" text="Change Control Keys">
                     <font>
                        <Font size="15.0"/>
                     </font>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#back" prefHeight="30.0"
                          prefWidth="100.0" styleClass="BackButton" text="Back">
                     <font>
                        <Font size="15.0"/>
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</Pane>
