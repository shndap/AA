<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
      prefWidth="500.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.ProfileMenu.ProfileMenu">
    <VBox alignment="CENTER" prefHeight="700.0" prefWidth="500.0" spacing="10.0"
          stylesheets="@../ProfileMenu/style.css">
        <Circle fill="DODGERBLUE" radius="100.0" stroke="BLACK" strokeType="INSIDE" fx:id="circle"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name" fx:id="name">
            <font>
                <Font name="Copperplate Gothic Bold" size="30.0"/>
            </font>
        </Text>
        <VBox alignment="BOTTOM_CENTER" prefHeight="252.0" prefWidth="500.0" spacing="13.0">
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="ChangeName"
                    text="Change Name" onMouseClicked="#changeName">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="ChangePass"
                    text="Change Password" onMouseClicked="#changePass">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="ChangeAvatar"
                    text="Change Avatar" onMouseClicked="#changeAvatar">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="LogOut"
                    text="Log Out" onMouseClicked="#logout">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="DeleteAccount"
                    text="Delete Account" onMouseClicked="#deleteAccount">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="BackButton"
                    text="Back" onMouseClicked="#back">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
        </VBox>
    </VBox>
</Pane>
